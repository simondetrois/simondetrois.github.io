{
  "name": "simondetrois.github.io",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run md:convert && react-router build",
    "dev": "npm run md:convert && react-router dev",
    "start": "npm run md:convert && react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "md:convert": "cd scripts && tsc convertMarkdowns.ts && mv convertMarkdowns.js convertMarkdowns.cjs && cd .. && node scripts/convertMarkdowns.cjs",
    "md:hash": "find ./public/mds -type f -exec sha256sum {} + | sha256sum",
    "md:hash:save": "find ./public/mds -type f -exec sha256sum {} + | sha256sum > scripts/hash"

  },
  "dependencies": {
    "@react-router/node": "^7.4.1",
    "@react-router/serve": "^7.4.1",
    "fs-extra": "^11.3.0",
    "isbot": "^5.1.17",
    "lucide-react": "^0.487.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.4.1"
  },
  "devDependencies": {
    "@react-router/dev": "^7.4.1",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^20",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "react-router-devtools": "^1.1.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
